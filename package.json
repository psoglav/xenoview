{
  "name": "cryptoview",
  "author": "psoglav",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "scripts": {
    "build": "yarn remove-build && tsc && yarn copy-public",
    "dev": "cd sandbox && yarn dev",
    "watch": "tsc --watch",
    "test": "jest",
    "prepare": "husky install",
    "remove-build": "rm -rf ./dist",
    "copy-public": "cp -r ./src/public/ ./dist/",
    "commit": "git add src && git commit",
    "commit:sub": "git add sandbox && git commit -m 'chore: update submodule' --no-verify"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "husky": "^8.0.1",
    "jest": "^28.1.3"
  }
}
